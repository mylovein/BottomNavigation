<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fixed_bottom_navigation_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_navigation_height"
    android:background="?selectableItemBackgroundBorderless"
    android:paddingBottom="@dimen/fixed_bottom_navigation_item_padding_bottom"
    android:paddingLeft="@dimen/fixed_bottom_navigation_item_padding_left"
    android:paddingRight="@dimen/fixed_bottom_navigation_item_padding_right"
    android:paddingTop="@dimen/fixed_bottom_navigation_item_with_badge_padding_top_inactive">


    <FrameLayout
        android:layout_width="@dimen/bottom_navigation_item_icon_with_badge_width"
        android:layout_height="@dimen/bottom_navigation_item_icon_with_badge_height"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/fixed_bottom_navigation_item_icon"
            android:layout_width="@dimen/bottom_navigation_item_icon"
            android:layout_height="@dimen/bottom_navigation_item_icon"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/bottom_navigation_badge"
            android:layout_width="@dimen/bottom_navigation_badge_width"
            android:layout_height="@dimen/bottom_navigation_badge_width"
            android:layout_gravity="top|right"
            android:background="@drawable/bottom_navigation_badge_background"
            android:gravity="center"
            android:includeFontPadding="false"
            android:scaleX="0"
            android:scaleY="0"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="@dimen/bottom_navigation_badge_with_num_text_size"
            android:visibility="invisible" />

    </FrameLayout>


    <TextView
        android:id="@+id/fixed_bottom_navigation_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lines="1"
        android:textSize="@dimen/bottom_navigation_item_text_size_active" />

</FrameLayout>